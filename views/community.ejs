<!DOCTYPE html>
<html lang="en">
<!-- Bootstrap core JavaScript -->
<script src="/views/vendor/jquery/jquery.min.js"></script>
<script src="/views/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Plugin JavaScript -->
<script src="/views/vendor/jquery-easing/jquery.easing.min.js"></script>
<!-- Custom scripts for this template -->
<head>
    <meta charset="utf-8">
    <!-- 화면 꽉채우기 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1.0, minimum-scale=1.0">
    <title>HEY DUDE</title>
    <!-- Bootstrap core CSS -->
    <link href="/views/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="https://cdn.materialdesignicons.com/4.5.95/css/materialdesignicons.min.css" rel="stylesheet">
    <link href="/views/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="/views/css/heydude.css" rel="stylesheet">
</head>
<body class="body-size">
<nav class="navbar navbar-dark bg-primary bar">
    <button type="button" onclick="PageToHome()" class="btn" style="border: none; color: white;">Hey Dude</button>
    <div>
        <button type="button" onclick="SignOut()" class="btn btn-outline-info my-2 my-sm-0" style="color: white">Sign Out</button>
    </div>
</nav>
<div class="content-scroll">
    <!--요안에만 채우시면됩니다.-->
    <table>
        <tr style="text-align: center;">
            <td style="display: inline-flex;">
                <div class='tendency' style="margin-left: 3%;">
                    <button type='button' class='btn' id="play" style= 'height: fit-content; color:white; background-color: #FFB6B9;'>play</button>
                </div>
                <div class='tendency' style="margin-left: 3%;">
                    <button type='button' class='btn' id="culture"  style= 'height: fit-content; color:white; background-color: #FAE3D9;'>culture</button>
                </div>
                <div class='tendency' style="margin-left: 3%;">
                    <button type='button' class='btn' id="study" style= 'height: fit-content; color:white; background-color: #BBDED6;'>study</button>
                </div>
            </td>
        </tr>
        <%
        if(profile=="") {%>
        <tr>
            <td>
                <div class="column" >
                    <div class='cardList'>
                        <h3>There is no registered users.</h3>
                    </div>
                </div>
            </td>
        </tr>
        <%}else{
            for(i in profile){%>
                <tr>
                    <td>
                        <div class="column" >
                            <div class='cardList'>
                                <div class='firstinfo'><img src='https://s3.amazonaws.com/uifaces/faces/twitter/mrvanz/128.jpg'/>
                                    <div class='profileinfo'>
                                        <h1><%=profile[i].userName%>
                                            <%if(profile[i].tendency=="play"){%>
                                                <div class='tendency' style="margin-left: 3%;">
                                                    <button type='button' class='btn' style= 'height: fit-content; color:white; background-color: #FFB6B9;'>play</button>
                                                </div>
                                            <%}else if(profile[i].tendency=="culture"){%>
                                                <div class='tendency' style="margin-left: 3%;">
                                                    <button type='button' class='btn' style= 'height: fit-content; color:white; background-color: #FAE3D9;'>culture</button>
                                                </div>
                                            <%}else if(profile[i].tendency=="study"){%>
                                                <div class='tendency' style="margin-left: 3%;">
                                                    <button type='button' class='btn' style= 'height: fit-content; color:white; background-color: #BBDED6;'>study</button>
                                                </div>
                                            <%}%>
                                        </h1>
                                        <h3><%=profile[i].age%>, <%=profile[i].nationality%>, <%=profile[i].sex%></h3>
                                        <p class='bio'><%=profile[i].introduce%></p>
                                        <button class='button' style='background-color: #7abaff' onclick="detail('<%=profile[i].userID%>')">Detail</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            <%}
        }%>
    </table>
</div>
<nav class="navbar navbar-light bar" style="background-color: #e3f2fd; justify-content: center;">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link mdi mdi-home" href="/home"></a>
        </li>
        <li class="nav-item">
            <a class="nav-link mdi mdi-account-group active" href="/profile/community"></a>
        </li>
        <li class="nav-item">
            <a class="nav-link mdi mdi-account-plus" href="/request/view"></a>
            <%if(requestcount>0){%>
            <span class="button__badge"><%=requestcount%></span>
            <%}%>
        </li>
        <li class="nav-item">
            <a class="nav-link mdi mdi-comment" href="/chat/chatRoom"></a>
            <%if(messagecount>0){%>
            <span class="button__badge"><%=messagecount%></span>
            <%}%>
        </li>
        <li class="nav-item">
            <a class="nav-link mdi mdi-account" href="/mypage"></a>
        </li>
    </ul>
</nav>

</body>
</html>
<script>
    function PageToHome() {
        location.href="/home"
    }
    function SignOut() {
        $.ajax({
            type:"GET",
            url: "/user/signout" ,
            data: {
            }
        }).done(function(result) {
            if (result) {
                location.replace('/signin');
            } else {
                location.reload();
            }
        });
    }
    function detail(friendID) {
        $.ajax({
            type:"POST",
            url: "/profile/detail" ,
            data: {
                friendID : friendID
            }
        }).done(function(result) {
            if (result) {
                location.href='/profile/view';
            } else {
                location.reload();
            }
        });
    }

    $("#play").click(()=>{
        location.href="/profile/play"
    })
    $("#culture").click(()=>{
        location.href="/profile/culture"
    })
    $("#study").click(()=>{
        location.href="/profile/study"
    })
</script>

