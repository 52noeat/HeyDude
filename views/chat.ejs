                                            <%}%>
                                        </div>
                                        <div class="msg_cotainer">
                                                <%=chat[i].message%>
                                            <span class="msg_time"><%=chat[i].date%></span>
                                        </div>
                                    </div>
                        <%
                                }
                            }
                        %>
